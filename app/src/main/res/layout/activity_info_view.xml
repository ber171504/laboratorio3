<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoView" android:id="@+id/constraintLayout">
    <ScrollView
            android:layout_width="352dp"
            android:layout_height="619dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.302" android:clipToPadding="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">
            <TextView
                    android:text="@string/title"
                    android:layout_width="337dp"
                    android:layout_height="47dp"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:id="@+id/mainTitle"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@string/subtitle"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/subTitle"
                    app:layout_constraintTop_toBottomOf="@+id/mainTitle"
                    android:textStyle="italic"/>
            <TextView
                    android:text="@string/body"
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:id="@+id/bodyText"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/mainTitle"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/editText3" android:textStyle="italic" />
            <Button
                    android:text="@string/comentar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button2"
                    android:background="@color/colorPrimary" android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>